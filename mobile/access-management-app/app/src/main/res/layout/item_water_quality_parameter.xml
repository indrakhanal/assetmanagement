<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/etQualityParameter"
        style="@style/EditTextStyleUnit"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/labelUnit"
        android:layout_marginTop="@dimen/view_margin_medium"
        android:hint="@string/quality_test_chlorine_residue"
        />

    <TextView
        android:id="@+id/labelUnit"
        app:layout_constraintTop_toTopOf="@id/etQualityParameter"
        app:layout_constraintBottom_toBottomOf="@id/etQualityParameter"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        style="@style/TextStyleUnit.MG"
        android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>